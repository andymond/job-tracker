<section class="top-3">
  <% @companies.first(3).each_with_index do |company, index| %>
    <div class="top-3-company">
      <p><%= company.name %> is your #<%= index + 1 %> company!</p>
      <p>You are on average <%= company.jobs.average(:level_of_interest) %>% interested in jobs here.</p>
    </div>
  <% end %>
</section>

<section class="num-jobs-location">
  <% @jobs_per_location.each do |city, count| %>
    <div class="city_count">
      You are tracking <%= count %> jobs in <%= link_to city, "/jobs?location=#{city}" %>
    </div>
  <% end %>
</section>

<section class="loi-list">
  <% @jobs_by_interest.each do |loi, count| %>
    <div class="loi-item">
      You are <%= loi %>% interested in <%= count %> jobs.
    </div>
  <% end %>
</section>
