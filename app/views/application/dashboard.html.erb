<h1>Welcome to Your Dashboard</h1>

<section class="top-3">
  <% @companies.first(3).each_with_index do |company, index| %>
    <%= link_to(company_path(company), html_options = {class: "top-3-company"}) do %>
      <div>
        <p> <strong> <%= company.name %></strong> is your #<%= index + 1 %> company!</p>
        <p class="dashboard_average">You are on average <%= company.jobs.average(:level_of_interest) %>% interested in jobs here.</p>
      </div>
    <% end %>
  <% end %>
</section>

<section class="num-jobs-location">
  <h4>You are tracking:</h4>
  <% @jobs_per_location.each do |city, count| %>
    <div class="city_count">
      <%= count %> jobs in <%= link_to city, "/jobs?location=#{city}" %>
    </div>
  <% end %>
</section>

<section class="loi-list">
  <% @jobs_by_interest.each do |loi, count| %>
    <div class="loi-item">
      You are <%= loi %>% interested in <%= count %> jobs.
    </div>
  <% end %>
</section>
